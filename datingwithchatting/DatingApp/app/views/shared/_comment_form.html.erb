<%= form_for(@comment) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div class="row">
	<aside class="span1">
		<section>
			<% if !@current_user.userimage.size.nil? %>
			<%= image_tag @current_user.userimage.url, size:"30x50" , style: "float:left; position:relative"%>
			<%= f.hidden_field :post_id, value: current_micropost.id %>
			<% end %>
		</section>
	</aside>
	<aside class="span4" style="margin-left: -18px;">
		<section>
			<%= f.text_area :content, placeholder: "write a comment", style: "width: 300px; height: 50px; resize: none;"  %>
			<%= f.submit "Comment", class: "btn btn-medium btn-primary" %>
		</section>
	</aside>
</div>

<% end %>