<%= form_for @contest ,:url => {controller: "contest", action: "create"} do |f|%>

<div class="row">
	<aside class="span4" >
		<h1>Add contest</h1>
		<%= render 'shared/error_messages', object: f.object %>
		<section>
			<%= f.text_field :name, placeholder: "Contest name"  %>
			<%= f.text_area :description, placeholder: "Give a description", style: "width: 300px; height: 50px; resize: none;"  %>
			<%= f.label :publishdate %>
			<%= f.date_field :publishdate, placeholder: "Publish date"  %>
			<%= f.label :contestdate %>
			<%= f.date_field :contestdate, placeholder: "Contest date"  %>
			<%= f.label :lastdate %>
			<%= f.date_field :lastdate, placeholder: "Last date"  %>
			

			<%= f.submit "Add Contest", class: "btn btn-medium btn-primary" %>
		</section>
	</aside>
</div>

<% end %>