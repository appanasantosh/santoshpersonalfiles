<% provide(:title, 'Home') %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
       <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center hero-unit">
	<h1> Welcome to the Wall App</h1>
	
	<%= link_to "Sign up now!" , signup_path, class: "btn btn-large btn-primary"%>
	<div><p>or Sign in with <a href="https://accounts.google.com/login" target="_blank"> <img src="/assets/google-search-icon.png" width="20px" height="20px"></img></a> <a href="#"><img src="/assets/fb1.jpg" width="20px" height="20px"></img></a></p></div>	 
</div>
<% end %>
